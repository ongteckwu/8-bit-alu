module additon (
    input a[8],
    input b[8],
    input alufn0,
    output sum[8]
    
      ) {

  always {
        sum[0] = a[0]^b[0]^alufn0;
        sum[1] = a[1]^b[1]^(a[0]&b[0]);
        sum[2] = a[2]^b[2]^(a[1]&b[1]);
        sum[3] = a[3]^b[3]^(a[2]&b[2]);
        sum[4] = a[4]^b[4]^(a[3]&b[3]);
        sum[5] = a[5]^b[5]^(a[4]&b[4]);
        sum[6] = a[6]^b[6]^(a[5]&b[5]);
        sum[7] = a[7]^b[7]^(a[6]&b[6]);
  }
}
